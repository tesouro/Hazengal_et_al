{
	"name": "Julia 1.11 + Dynare Codespace",
	"dockerFile": ".devcontainer/Dockerfile",

	// Persistent volume to cache Julia packages (avoids reinstall)
	"mounts": [
		"source=julia_cache,target=/home/vscode/.julia,type=volume"
	],

	// Script that installs Dynare.jl automatically (once)
	"postCreateCommand": "bash .devcontainer/setup_dynare.sh",

	"customizations": {
		"vscode": {
			"extensions": [
				"julialang.language-julia"
			]
		}
	},

	"remoteUser": "vscode"
}
